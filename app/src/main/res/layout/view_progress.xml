<?xml version="1.0" encoding="utf-8"?>
<com.troncodroide.heroadventurehelper.views.CollapsableLayoutView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/text_padding"
    app:setCollapseInitState="closed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.troncodroide.heroadventurehelper.views.TypefacedTextView
                android:id="@+id/title"
                style="@style/text_title"
                android:text="Title" />

            <com.troncodroide.heroadventurehelper.views.TypefacedTextView
                android:id="@+id/message"
                style="@style/text_normal"
                android:layout_marginTop="5dp"
                android:text="Message" />

            <ProgressBar
                android:id="@+id/progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:max="100"
                android:progress="80" />
        </LinearLayout>

        <com.troncodroide.heroadventurehelper.views.TypefacedTextView
            android:id="@+id/progress_stop"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/text_padding"
            android:text="@string/fa_stop" />
    </LinearLayout>
</com.troncodroide.heroadventurehelper.views.CollapsableLayoutView>