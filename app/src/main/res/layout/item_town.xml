<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_town"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_padding"
    android:padding="@dimen/text_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/town_card_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/town" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_padding"
                android:orientation="vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Small">

                <com.troncodroide.heroadventurehelper.views.TypefacedTextView
                    android:id="@+id/town_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOWN NAME"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:setTypeface="Kirbis" />

                <com.troncodroide.heroadventurehelper.views.TypefacedTextView
                    android:id="@+id/town_card_population"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POPULATION"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:setTypeface="Kirbis" />

                <com.troncodroide.heroadventurehelper.views.TypefacedTextView
                    android:id="@+id/town_card_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POPULATION"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:setTypeface="Kirbis" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <com.troncodroide.heroadventurehelper.views.TypefacedButton
                android:id="@+id/town_card_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="visit"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:setTypeface="Kirbis" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
